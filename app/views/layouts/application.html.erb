<!DOCTYPE html>
<html>
<head>
  <%= stylesheet_link_tag 'application' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tag %>
</head>
<body>

  <header class="navigation" role="banner">
    <div class="navigation-wrapper">
      <a href="javascript:void(0)" class="logo">
        <img src="https://raw.githubusercontent.com/thoughtbot/refills/master/source/images/placeholder_logo_1.png" alt="Logo Image">
      </a>
      <a href="javascript:void(0)" class="navigation-menu-button" id="js-mobile-menu"><%= t(".menu") %></a>
      <nav role="navigation">
        <ul id="js-navigation-menu" class="navigation-menu show">
          <li class="nav-link"><a href="<%= about_path %>"><%= t(".about") %></a></li>
          <% if signed_in? %>
          <li class="nav-link"><a href="<%= links_path %>"><%= t(".links") %></a></li>
            <% end %>
        </ul>
      </nav>
      <div class="navigation-tools">
        <% if signed_in? %>
          <%= button_to t(".sign_out"), sign_out_path, method: :delete, class: "sign-out" %>
        <% else %>
          <%= link_to t(".sign_in"), sign_in_path, class: "sign-in" %>
        <% end %>
      </div>
    </div>
  </header>

  <div id="flash">
    <% flash.each do |key, value| -%>
      <div id="flash_<%= key %>" class="flash-<%= key %>"><%=h value %></div>
    <% end %>
  </div>

  <%= yield %>
</body>
</html>
