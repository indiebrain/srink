<!DOCTYPE html>
<html>
<head>
  <%= stylesheet_link_tag 'application' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tag %>
  <title><%= page_title %></title>
</head>
<body class="<%= body_class %>">

  <header class="navigation" role="banner">
    <div class="navigation-wrapper">
      <a href="javascript:void(0)" class="logo">
        <%= image_tag "srink_ray.png", alt: "shrink-ray" %>
      </a>
      <a href="javascript:void(0)" class="navigation-menu-button" id="js-mobile-menu"><%= t(".menu") %></a>
      <nav role="navigation">
        <ul id="js-navigation-menu" class="navigation-menu show">
          <li class="nav-link"><%= link_to t(".about"), page_path("about") %></li>
          <% if signed_in? %>
            <li class="nav-link"><%= link_to t(".links"), links_path %>"></li>
          <% else %>
            <li class="nav-link"><%= link_to t(".sign_in"), sign_in_path %></li>
          <% end %>
        </ul>
      </nav>
      <div class="navigation-tools">
        <% if signed_in? %>
          <%= button_to t(".sign_out"), sign_out_path, method: :delete, class: "sign-out" %>
        <% end %>
      </div>
    </div>
  </header>

  <div id="flash">
    <% flash.each do |key, value| -%>
      <div id="flash_<%= key %>" class="flash-<%= key %>"><%=h value %></div>
    <% end %>
  </div>

  <%= yield %>
</body>
</html>
